<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="buttonStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textSize">@dimen/buttonTextSize</item>
        <item name="android:paddingTop">@dimen/buttonPaddingTopSize</item>
        <item name="android:paddingLeft">@dimen/buttonPaddingLeftSize</item>
        <item name="android:paddingRight">@dimen/buttonPaddingRightSize</item>
        <item name="android:paddingBottom">@dimen/buttonPaddingBottomSize</item>
        <item name="android:layout_margin">@dimen/buttonLayout_marginSize</item>
        <item name="android:textColor">@color/secondaryTextColor</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="descriptionTextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/mainTextColor</item>
        <item name="android:padding">@dimen/descriptionTextPadding</item>
        <item name="android:textSize">@dimen/descriptionTextSize</item>
    </style>
</resources>
